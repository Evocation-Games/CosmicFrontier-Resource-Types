@project "Cosmic Frontier";
@author "Evocation Games";
@author "Tom Hancocks";
@version "1.0";

@function MapAchievementID = #128 + hash($1);
@var Test = 323;

type Achievement : "Ã¤chv" {
	template {
		PSTR Description;
		RSRC PendingIcon;
		RSRC CompletedIcon;
		HBYT Flags;
		HEXD Conditions;
	};
	
	@synthesize field("Description");
	
	field("Flags") {
		Flags as Bitmask = 0 [
			Spoiler = 0x01,
			ObscureTitle = 0x02,
			DisplayRewards = 0x04,
			Hidden = 0x08
		];
	};
	
	field("Icon") {
		@api(completed) CompletedIcon as &;
		@api(pending) PendingIcon as & = #-1;
	};
	
	field("Conditions") {
		Conditions as CommandEncoder;
	};
};
